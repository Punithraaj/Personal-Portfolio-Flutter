# .github/workflows/deploy.yml
name: Deploy Flutter Web to GitHub Pages

permissions:
  contents: write    # give the job write access

on:
  push:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3
        with:
          persist-credentials: false  # do not reuse GITHUB_TOKEN
          fetch-depth: 0              # pull full history

      - uses: subosito/flutter-action@v2
        with:
          channel: stable

      - name: Install dependencies
        run: flutter pub get

      - name: Build web
        run: flutter build web --release

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          personal_token: ${{ secrets.GH_PAGES_TOKEN }}
          publish_branch: gh-pages
          publish_dir: ./build/web
          force_orphan: true            # ‚Üê force-create/overwrite gh-pages
          commit_message: "Deploy from ${{ github.sha }}"
