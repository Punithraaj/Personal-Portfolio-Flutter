# .github/workflows/deploy.yml
name: Deploy Flutter Web to GitHub Pages

# 1) Give the job write access to repo contents
permissions:
  contents: write

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      # 2) Checkout your code WITHOUT persisting the default token
      - name: Checkout
        uses: actions/checkout@v3
        with:
          persist-credentials: false    # ← important!
          fetch-depth: 0                # ← full history

      # Install Flutter
      - uses: subosito/flutter-action@v2
        with:
          channel: stable

      # Get dependencies
      - name: Install dependencies
        run: flutter pub get

      # Build your web release
      - name: Build web
        run: flutter build web --release

      # 3) Deploy using your PAT
      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GH_PAGES_TOKEN }}
          publish_dir: ./build/web
          # (optional) branch: gh-pages   # if you want to explicitly set it
